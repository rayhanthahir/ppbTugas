<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/gojek"
        android:importantForAccessibility="no" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/button_youtube"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:onClick="openYoutube"
            android:text="@string/open_youtube"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/button_dial"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_youtube"
            android:layout_marginBottom="16dp"
            android:onClick="dialNumber"
            android:text="@string/dial_number"
            tools:ignore="ObsoleteLayoutParam,TextContrastCheck" />

        <Button
            android:id="@+id/button_map"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_dial"
            android:layout_marginBottom="16dp"
            android:onClick="openMap"
            android:text="@string/open_map"
            tools:ignore="ObsoleteLayoutParam,TextContrastCheck" />

        <Button
            android:id="@+id/button_share"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_map"
            android:onClick="shareText"
            android:text="@string/share_text"
            tools:ignore="ObsoleteLayoutParam,TextContrastCheck" />
    </LinearLayout>

</LinearLayout>